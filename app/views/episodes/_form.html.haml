= form_for @episode, html: { class: "form form-horizontal episode" } do |f|
  .form-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@episode[:name])
  .form-group
    = f.label :url, class: 'control-label'
    .controls
      = f.text_field :url, class: 'form-control', required: true
    = error_span(@episode[:url])
  .form-group
    = f.label :last_season, class: 'control-label'
    .controls
      = f.text_field :last_season, class: 'form-control', required: true
    = error_span(@episode[:last_season])
  .form-group
    = f.label :last_episode, class: 'control-label'
    .controls
      = f.text_field :last_episode, class: 'form-control', required: true
    = error_span(@episode[:last_episode])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), episodes_path, :class => 'btn btn-default'
