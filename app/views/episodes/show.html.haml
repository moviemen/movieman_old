- model_class = Episode
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @episode.name
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @episode.url
%p
  %strong= model_class.human_attribute_name(:last_season) + ':'
  %br
  = @episode.last_season
%p
  %strong= model_class.human_attribute_name(:last_episode) + ':'
  %br
  = @episode.last_episode


= link_to t('.back', :default => t("helpers.links.back")), episodes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_episode_path(@episode), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), episode_path(@episode), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
