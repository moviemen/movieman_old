- model_class = Episode
%table.table.table-striped
  %thead
    %tr
      %th TV Series
      %th season
      %th episode
      %th released at
      %th unsubscribe
  %tbody
    - @episodes.each do |episode|
      %tr
        %td= link_to episode.name, episode_path(episode)
        %td= episode.last_season
        %td= episode.last_episode
        %td= episode.updated_at.to_datetime.strftime "%d.%m.%Y %I:%M %p"
        %td
          = link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, episode_unsubscribe_path(episode), class: 'btn btn-xs btn-primary', disabled: false

%center
  = will_paginate @episodes, :renderer => BootstrapPagination::Rails
